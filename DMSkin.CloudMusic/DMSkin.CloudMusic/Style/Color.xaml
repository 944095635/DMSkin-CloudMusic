<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DMSkin.CloudMusic.Style">
    <!--  主题色  -->
    <SolidColorBrush x:Key="ThemeColor" Color="#C62F2F" />
    <SolidColorBrush x:Key="ThemeColor2" Color="#E83C3C" />
    <SolidColorBrush x:Key="ThemeColor3" Color="#B12323" />

    <SolidColorBrush x:Key="ThemeButtonColor" Color="#0C73C2" />
    <SolidColorBrush x:Key="ThemeButtonColor2" Color="#1167A8" />

    <!--  高亮背景色  -->
    <SolidColorBrush x:Key="ThemeHighlightBackColor" Color="#E6E7EA" />

    <!--  按钮高亮色  -->
    <SolidColorBrush x:Key="ButtonHighlightBackColor" Color="#7C7D85" />

    <SolidColorBrush x:Key="LeftGridColor" Color="#F5F5F7" />

    <SolidColorBrush x:Key="RightGridColor" Color="#FAFAFA" />

    <SolidColorBrush x:Key="BottomGridColor" Color="#F6F6F8" />

    <SolidColorBrush x:Key="SplitterColor" Color="#E1E1E2" />

    <SolidColorBrush x:Key="TextColor" Color="#5C5C5C" />
    <SolidColorBrush x:Key="TextColor1" Color="#333333" />
    <SolidColorBrush x:Key="TextColor2" Color="#555555" />
    <SolidColorBrush x:Key="TextColor3" Color="#888888" />
</ResourceDictionary>